<h2>Create a new user</h2>
<hr>
<form action="/newuser" method="POST">
<label>First Name: *</label>
<input type="text" name="name" placeholder="New user's first name"/>
<br>
<label>Last Name: *</label>
<input type="text" name="lastName" placeholder="New user's last name">
<br>
<label>Email: *</label>
<input type="email" name="email" placeholder="New user's email address">
<br>
<label>Password: *</label>
<input type="password" name="password" placeholder="Password">
<br>
<label>Password: *</label>
<input type="password" name="password2" placeholder="Repeat password">
<br>
<label>Role: *</label>
 <input type="radio" name="role" value="Admin" checked> Admin<br>
 <input type="radio" name="role" value="Ops"> Ops<br>
 <input type="radio" name="role" value="Client"> Client<br><br>
 <input type="submit">
</form>


